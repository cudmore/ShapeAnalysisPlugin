# todo: check that 'venv' is installed, if not then install

# todo: check if folder 'env' exists

# create a virtual environment in folder 'env'
python3 -m venv env

# activate the virtual environment
source env/bin/activate

pip install -r requirements.txt

# deactive environment
deactivate

